
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users on specific paths
    
    // User avatars: Only the user can write to their own avatar path
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Product, Category, and Site Asset images: Allow write for any authenticated user
    // The application logic should ensure only admins can trigger these uploads.
    match /product-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /category-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /site-assets/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /userSharedFiles/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
